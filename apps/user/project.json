{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/user/src",
  "projectType": "application",
  "targets": {
    "deploy": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx run-many --target=build --project=device --parallel --configuration=production",
          "docker build -f ./apps/device/Dockerfile . -t device"
        ],
        "parallel": true
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/user",
        "main": "apps/user/src/main.ts",
        "tsConfig": "apps/user/tsconfig.app.json",
        "assets": ["apps/user/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "generatePackageJson": true,
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "libs/core/src/config/environments/environment.ts",
              "with": "libs/core/src/config/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "user:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "user:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/user/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/user"],
      "options": {
        "jestConfig": "apps/user/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
